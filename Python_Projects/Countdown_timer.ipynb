      "source": [
        "def countdown(t):\n",
        "  while t:\n",
        "    mins,secs = divmod(t,60)\n",
        "    timer = '{:02d}:{:02d}'.format(mins, secs)\n",
        "    print(timer, end='\\r')\n",
        "    time.sleep(1)\n",
        "    print(timer)\n",
        "    t-=1\n",
        "  print('Time is over')\n",
        "t = input(\"Enter time in second:\")\n",
        "countdown(int(t))"
      ],
